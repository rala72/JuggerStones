<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/main_activity"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/black"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:baselineAligned="false"
        android:gravity="center_horizontal"
        android:orientation="horizontal">

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_weight="1">

            <android.support.v7.widget.AppCompatTextView
                android:id="@+id/textView_team1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:gravity="center"
                android:maxLines="1"
                android:maxWidth="@dimen/textSizeAuto_smallMaxWidth"
                android:minHeight="@dimen/textSizeAuto_smallMinHeight"
                android:minWidth="@dimen/textSizeAuto_smallMinWidth"
                android:text="@string/team1"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:textColor="@color/default_team1"
                android:textSize="@dimen/textSize_teamDetails"
                app:autoSizeTextType="uniform" />

            <android.support.v7.widget.AppCompatTextView
                android:id="@+id/textView_team1_points"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/textView_team1"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:gravity="center"
                android:maxLines="1"
                android:maxWidth="@dimen/textSizeAuto_smallMaxWidth"
                android:minHeight="@dimen/textSizeAuto_smallMinHeight"
                android:minWidth="@dimen/textSizeAuto_smallMinWidth"
                android:text="@string/zero"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:textColor="@color/default_team1"
                android:textSize="@dimen/textSize_teamDetails"
                app:autoSizeTextType="uniform" />

            <GridLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/textView_team1_points"
                android:layout_centerHorizontal="true"
                android:rowCount="1">

                <android.support.v7.widget.AppCompatImageButton
                    android:id="@+id/button_team1_decrease"
                    android:layout_width="@dimen/button_increaseDecrease_size"
                    android:layout_height="@dimen/button_increaseDecrease_size"
                    android:layout_gravity="center"
                    android:layout_margin="@dimen/button_increaseDecrease_margin"
                    android:background="@android:color/transparent"
                    android:contentDescription="@string/decrease"
                    android:scaleType="fitCenter"
                    android:src="@drawable/button_decrease" />

                <android.support.v7.widget.AppCompatImageButton
                    android:id="@+id/button_team1_increase"
                    android:layout_width="@dimen/button_increaseDecrease_size"
                    android:layout_height="@dimen/button_increaseDecrease_size"
                    android:layout_gravity="center"
                    android:layout_margin="@dimen/button_increaseDecrease_margin"
                    android:background="@android:color/transparent"
                    android:contentDescription="@string/increase"
                    android:scaleType="fitCenter"
                    android:src="@drawable/button_increase" />
            </GridLayout>

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_weight="1">

            <android.support.v7.widget.AppCompatTextView
                android:id="@+id/textView_team2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:gravity="center"
                android:maxLines="1"
                android:maxWidth="@dimen/textSizeAuto_smallMaxWidth"
                android:minHeight="@dimen/textSizeAuto_smallMinHeight"
                android:minWidth="@dimen/textSizeAuto_smallMinWidth"
                android:text="@string/team2"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:textColor="@color/default_team2"
                android:textSize="@dimen/textSize_teamDetails"
                app:autoSizeTextType="uniform" />

            <android.support.v7.widget.AppCompatTextView
                android:id="@+id/textView_team2_points"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/textView_team2"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:gravity="center"
                android:maxLines="1"
                android:maxWidth="@dimen/textSizeAuto_smallMaxWidth"
                android:minHeight="@dimen/textSizeAuto_smallMinHeight"
                android:minWidth="@dimen/textSizeAuto_smallMinWidth"
                android:text="@string/zero"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:textColor="@color/default_team2"
                android:textSize="@dimen/textSize_teamDetails"
                app:autoSizeTextType="uniform" />

            <GridLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/textView_team2_points"
                android:layout_centerHorizontal="true"
                android:rowCount="1">

                <android.support.v7.widget.AppCompatImageButton
                    android:id="@+id/button_team2_decrease"
                    android:layout_width="@dimen/button_increaseDecrease_size"
                    android:layout_height="@dimen/button_increaseDecrease_size"
                    android:layout_gravity="center"
                    android:layout_margin="@dimen/button_increaseDecrease_margin"
                    android:background="@android:color/transparent"
                    android:contentDescription="@string/decrease"
                    android:scaleType="fitCenter"
                    android:src="@drawable/button_decrease" />

                <android.support.v7.widget.AppCompatImageButton
                    android:id="@+id/button_team2_increase"
                    android:layout_width="@dimen/button_increaseDecrease_size"
                    android:layout_height="@dimen/button_increaseDecrease_size"
                    android:layout_gravity="center"
                    android:layout_margin="@dimen/button_increaseDecrease_margin"
                    android:background="@android:color/transparent"
                    android:contentDescription="@string/increase"
                    android:scaleType="fitCenter"
                    android:src="@drawable/button_increase" />
            </GridLayout>

        </RelativeLayout>

    </LinearLayout>

    <RelativeLayout
        android:id="@+id/layout_center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true">

        <android.support.v7.widget.AppCompatImageButton
            android:id="@+id/button_stones_decrease"
            android:layout_width="@dimen/button_increaseDecrease_size"
            android:layout_height="@dimen/button_increaseDecrease_size"
            android:layout_centerVertical="true"
            android:layout_marginEnd="@dimen/button_increaseDecrease_margin_center"
            android:layout_marginRight="@dimen/button_increaseDecrease_margin_center"
            android:layout_toLeftOf="@+id/textView_stones"
            android:layout_toStartOf="@+id/textView_stones"
            android:background="@android:color/transparent"
            android:contentDescription="@string/decrease"
            android:scaleType="fitCenter"
            android:src="@drawable/button_decrease" />

        <android.support.v7.widget.AppCompatTextView
            android:id="@+id/textView_stones"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:gravity="center"
            android:maxLines="1"
            android:maxWidth="@dimen/textSizeAuto_largeMaxWidth"
            android:minHeight="@dimen/textSizeAuto_largeMinHeight"
            android:minWidth="@dimen/textSizeAuto_largeMinWidth"
            android:text="@string/zero"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:textColor="@android:color/white"
            android:textSize="@dimen/textSize_stones"
            app:autoSizeTextType="uniform" />

        <android.support.v7.widget.AppCompatImageButton
            android:id="@+id/button_stones_increase"
            android:layout_width="@dimen/button_increaseDecrease_size"
            android:layout_height="@dimen/button_increaseDecrease_size"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/button_increaseDecrease_margin_center"
            android:layout_marginStart="@dimen/button_increaseDecrease_margin_center"
            android:layout_toEndOf="@+id/textView_stones"
            android:layout_toRightOf="@+id/textView_stones"
            android:background="@android:color/transparent"
            android:contentDescription="@string/increase"
            android:scaleType="fitCenter"
            android:src="@drawable/button_increase" />

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true">

        <android.support.v7.widget.AppCompatImageButton
            android:id="@+id/button_playPause"
            android:layout_width="@dimen/button_playStop_size"
            android:layout_height="@dimen/button_playStop_size"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:background="@android:color/transparent"
            android:scaleType="fitCenter"
            android:src="@drawable/button_play" />

        <android.support.v7.widget.AppCompatImageButton
            android:id="@+id/button_stop"
            android:layout_width="@dimen/button_playStop_size"
            android:layout_height="@dimen/button_playStop_size"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:background="@android:color/transparent"
            android:scaleType="fitCenter"
            android:src="@drawable/button_stop" />

    </RelativeLayout>

</RelativeLayout>
